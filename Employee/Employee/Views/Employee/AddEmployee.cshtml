@model Employee.Models.AddEmployee
@{
    ViewData["Title"] = "Add Employee";
}


<div class="container-fluid mt-5">
    <h1 class="display-4">Add Employee</h1>
    <form method="post" action="AddEmployee">
        <div class="form-group mt-3">
            <label for="">Name</label>
            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter name" asp-for="Name">
        </div>
        <div class="form-group mt-3">
            <label for="">Address</label>
            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Address" asp-for="Address">
        </div>
        <div class="form-group mt-3">
            <label for="">Designation</label>
            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter Designation" asp-for="Designation">
            @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
        </div>
        <div class="form-group mt-3">
            <label for="">Joining Date</label>
            <input type="date" class="form-control" id="exampleInputEmail1" placeholder="Joining Date" asp-for="JoiningDate">
            @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
        </div>
        <div class="form-group mt-3">
            <label for="">Salary</label>
            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Salary" asp-for="Salary">
        </div>

        <button type="submit" class="btn btn-dark mt-3">Add Employee</button>
    </form>
</div>