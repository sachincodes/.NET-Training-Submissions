@model EFCoreWeb.Models.AdmissionViewModel

@using (Html.BeginForm("SaveAdmission", "Admission", FormMethod.Post))
{
    @Html.Label("Select Course:")
    @Html.DropDownListFor(m => m.SelectCourseId, new SelectList(Model.Courses, "CourseId", "CourseName"), "Select Course", new { @class = "form-control" })

    @Html.LabelFor(m => m.StudentName)
    @Html.TextBoxFor(m => m.StudentName, new { @class = "form-control" })

    @Html.LabelFor(m => m.Age)
    @Html.TextBoxFor(m => m.Age, new { @class = "form-control" })

    @Html.LabelFor(m => m.City)
    @Html.TextBoxFor(m => m.City, new { @class = "form-control" })

    <button type="submit" class="btn btn-primary">Save</button>
}
