@using Ecommerce.StaticFiles
@model List<Ecommerce.Models.IProduct>
<style>
    .listofitems {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        margin: auto;
        padding: 20px;
    }

    .productdiv {
        border: 1px solid black;
        padding: 10px;
        margin: 10px;
        border-radius: 5px;
    }
</style>
<div class="container-fluid align-content-center">
    <h1>You cart items </h1>

    <div class="listofitems">

       @if (Model == null || Model.Count == 0)
        {
            <div>
                <h1>No items in the cart</h1>
                <a href="/" class="btn btn-primary"> Go To Products</a>
            </div>
        }
        else {
            @foreach (var p in Model)
            {
                <div class="productdiv">

                    <h1>@p.Name</h1>
                    <h4>@p.Price</h4>
                    <p>@p.Description</p>
                    <p>@p.Id</p>

                    <a  asp-action="RemoveFromCart" asp-controller="Product" asp-route-id="@p.Id"> <div class="btn btn-danger">Remove</div> </a>
                    @if (p.DiscountApplied == false)
                    {
                           <a asp-action="ApplyDiscount" asp-controller="Product" asp-route-id="@p.Id">
                            <div class="btn btn-outline-dark">
                                Apply Discount

                            </div>
                        </a>
                        
                    }

                </div>
                <h3>Total : @Store.TotalPrice </h3>
                <a class="btn btn-success" asp-action="Index" asp-controller="OrderNow">Order</a>
            }
        }
      
       
      
      
    </div>

   

    
</div>