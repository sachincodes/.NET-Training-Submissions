@model Employee


<div class="card">

    <div class="card-header bg-secondary text-white">
        <h4>Employee Details</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-2">
                <strong>Employee ID:</strong>
            </div>
            <div class="col-3">
                @Model.EmployeeId
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                <strong>Name:</strong>
            </div>
            <div class="col-3">
                @Model.EmployeeFirstName
            
                @Model.EmployeeLastName
            </div>

        </div>
        <div class="row">
            <div class="col-2">
                <strong> Date of Birth:</strong>
            </div>

            <div class="col-3">
                @Model.DateOfBirth
            </div>
        </div>


        <div class="row">
            <div class="col-2">
                <strong> Contact No:</strong>
            </div>
            <div class="col-3">
                @Model.ContactNo
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <strong>Department:</strong>
            </div>
            <div class="col-3">
                @Model.Department
            </div>
        </div>
        <div class="row my-2">
            <div class="col-4 offset-1">
               
                <a asp-action="Index" class="btn btn-primary"><i class="fa fa-backward"></i> Back</a>
                <a asp-action="Edit" asp-route-id="@Model.EmployeeId" class=" btn btn-success"><i class="fa fa-edit"></i> Edit</a>
               
            </div>
           
        </div>
    </div>

</div>


